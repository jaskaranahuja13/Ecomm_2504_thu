@model Ecomm_2504_thu.Models.CoverType
@{
    ViewData["Title"] = "Upsert";
    var title=Model.Id!=0?"Edit CoverType":"New CoverType";
    var saveUp = Model.Id != 0 ? "Update" : "Save";

}
<form method="post">
    <h2 class="text-primary">@title</h2>
    <div asp-validation-summary="ModelOnly" class="text-primary"></div>
    <div class="form-group row m-2 p-2">
        <div class="col-4 ">
            <label asp-for="Name"></label>
        </div>
        <div class="col-8">
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row m-2 p-2">
        <div class="col-4 offset-4">
            <button type="submit" class="btn btn-primary form-control">
                @saveUp
            </button>
        </div>
        <div class="col-4">
           <a class="btn btn-success form-control" asp-action="Index">
               Back To List
           </a>
        </div>
    </div>
</form>
